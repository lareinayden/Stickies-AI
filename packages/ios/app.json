{
  "expo": {
    "name": "Stickies AI",
    "slug": "stickies-ai",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "stickies-ai",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.stickiesai.app",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "Stickies AI needs microphone access to record voice for transcription and task creation.",
        "UIBackgroundModes": ["audio"]
      }
    },
    "plugins": [
      "expo-router",
      [
        "expo-av",
        {
          "microphonePermission": "Stickies AI needs microphone access to record voice."
        }
      ]
    ]
  }
}
